<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globalappinitiative.natakallam.PaymentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/paymentsCircle"
            android:layout_width="@dimen/payments_circle_size"
            android:layout_height="@dimen/payments_circle_size"
            android:layout_centerInParent="true"
            android:background="@drawable/payments_circle"
            android:transitionName="paymentsCircle" />

        <TextView
            android:id="@+id/textViewCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Credits\n100"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonAddCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentsCircle"
            android:layout_centerHorizontal="true"
            android:text="@string/add_credits"
            android:theme="@style/AppTheme.ButtonColored" />

    </RelativeLayout>
</FrameLayout>
