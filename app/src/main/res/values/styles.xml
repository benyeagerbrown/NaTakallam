<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemePayments" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="colorPrimary">@color/paymentsColor</item>
        <item name="colorPrimaryDark">@color/paymentsColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSettings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="colorPrimary">@color/settingsColor</item>
        <item name="colorPrimaryDark">@color/settingsColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ButtonColored" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonColoredSettings" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/settingsColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonColoredHome" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/homeColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonColoredAddSession" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/addSessionColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorControlHighlight">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@color/paymentsColor</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/holo_blue_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@color/homeColor</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:colorAccent">@color/homeColor</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>
